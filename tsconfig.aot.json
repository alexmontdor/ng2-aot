{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "skipLibCheck": true,
    "baseUrl": "."
  },
    "include": [
    "./app/app.module.ts",
    "./app/*/*.module.ts",
    "./app/*.module.ts",
    "./app/*.d.ts"
  ],
  "angularCompilerOptions": {
    "debug": true,
    "entryModule":"app/app.module#AppModule"
  }
}
